<header>

    <h1>Eat the Burger</h1>

</header>
<div class="container">
    <div class="wrapper">
        <div class="makeBurger">
            <h2>Create Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burg"> Burger: </label>
                    <input type="text" id="burg" name="burger_name">
                    <button class="subBurg" type="submit">Create Burger</button>
                </div>
            </form>
        </div>
        <div class="edibleBox">
            <h2>Edible Burgers</h2>
            <ul>
                {{#each burgers}} {{#unless devoured}} {{> burgers/burger-button devour=true}} {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="devBox">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}} {{#if devoured}} {{> burgers/burger-button devour=false}} {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>